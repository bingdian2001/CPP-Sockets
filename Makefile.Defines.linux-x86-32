CFLAGS +=	-Wall -g $(INCLUDE) -MD -D_VERSION='"$(VERSION)"'

# turn off optimization if compiling with gcc 2.9.x:
#CFLAGS +=	-O0
CFLAGS +=	-O2


CFLAGS +=	-DLINUX

CFLAGS +=	-fPIC

LIBS +=		\
		-lssl -lcrypto \
		-lpthread

OBJS +=		Semaphore.o

LDFLAGSSO +=	-shared \
		-Wl,-lssl \
		-Wl,-lcrypto
#LDFLAGSSO +=	-Wl,-lxml2
LDFLAGSSO +=	-Wl,-lpthread \
		-Wl,-h$(SONAME) \
		-Wl,-call_shared

